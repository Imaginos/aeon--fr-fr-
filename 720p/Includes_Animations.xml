	<animation effect="fade" time="200">WindowClose</animation>
</include>

<include name="Animation_BackgroundFade">
    <animation effect="fade" time="500" condition="![Window.Previous(4) + Container(300).HasFocus(9)] + !Window.Previous(2600)">WindowOpen</animation>
    <animation effect="fade" time="200" condition="![Window.Next(4) + Container(300).HasFocus(9)] + !Window.Next(2600)">WindowClose</animation>
    <animation effect="fade" time="800">Visible</animation>
    <animation effect="fade" delay = "300" time="800" condition="![Window.IsActive(2001) | Window.IsActive(2003)]">Hidden</animation>
</include>

<include name="Animation_WelcomeFade">
    <animation effect="fade" time="2000">WindowOpen</animation>
    <animation effect="fade" time="2000">WindowClose</animation>
</include>

<include name="Animation_WindowBackgroundFade">
